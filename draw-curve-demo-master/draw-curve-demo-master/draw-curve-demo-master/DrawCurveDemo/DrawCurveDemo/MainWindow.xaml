<Window
    x:Class="DrawCurveDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawCurveDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="1"
    Width="800"
    Height="400"
    mc:Ignorable="d"
    Background="#F0F0F0">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10">
			<Button x:Name="loadButton" Content="加载胎儿心率数据" Width="150" Height="40" 
                    Click="LoadButton_Click" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="5"
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    FontSize="16"/>
		</StackPanel>

		<local:FhrCurveChart x:Name="chart" Grid.Row="1" />
	</Grid>
</Window>