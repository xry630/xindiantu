<UserControl
    x:Class="DrawCurveDemo.FhrCurveChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawCurveDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="800"
    mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="12" />
		</Grid.RowDefinitions>
		<local:CurveDrawingVisual
            x:Name="curveDraw"
            Grid.RowSpan="2"
            Margin="0,0,0,1" />
		<ScrollViewer
            x:Name="scrollViewer"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Hidden"
            ScrollChanged="ScrollViewer_ScrollChanged"
            VerticalScrollBarVisibility="Disabled">
			<Canvas x:Name="canvas" Height="1" />
		</ScrollViewer>
		<Canvas
            x:Name="canvasPanel"
            Grid.RowSpan="2"
            Background="Transparent"
            MouseLeave="Canvas_MouseLeave"
            MouseMove="Canvas_MouseMove"
            PreviewMouseLeftButtonDown="Canvas_PreviewMouseLeftButtonDown"
            PreviewMouseUp="Canvas_PreviewMouseUp">
			<Border
                x:Name="borderSlider"
                Canvas.Left="0"
                Canvas.Bottom="0"
                Height="10"
                MinWidth="80"
                Background="#009C26"
                Opacity="0.8"
                PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
                Visibility="Collapsed" />
		</Canvas>

		<StackPanel
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
			<WrapPanel>
				<TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="FHR1：" />
				<TextBlock
                    x:Name="txtFhr1"
                    d:Text="123"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="#009C26" />
			</WrapPanel>
			<WrapPanel>
				<TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="FHR2：" />
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>
					<TextBlock
                        Grid.Row="1"
                        FontWeight="Bold"
                        Text="-20" />
				</Grid>
				<TextBlock
                    x:Name="txtFhr2"
                    d:Text="123"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="#8080C0" />
			</WrapPanel>
			<WrapPanel>
				<TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="FHR3：" />
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>
					<TextBlock
                        Grid.Row="1"
                        FontWeight="Bold"
                        Text="20" />
				</Grid>
				<TextBlock
                    x:Name="txtFhr3"
                    d:Text="123"
                    FontSize="32"
                    FontWeight="Bold" />
			</WrapPanel>
		</StackPanel>
	</Grid>
</UserControl>


