<Window x:Class="ECGViewer.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ECG Viewer - MVVM Infrastructure Demo" Height="500" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Background="#F0F0F0" Padding="10">
            <TextBlock Text="Counter:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBlock Text="{Binding Counter}" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="14"/>
            
            <Button Command="{Binding StartTimerCommand}" Padding="10,5" Margin="0,0,5,0">Start Timer</Button>
            <Button Command="{Binding StopTimerCommand}" Padding="10,5" Margin="0,0,5,0">Stop Timer</Button>
            <Button Command="{Binding ShowMessageCommand}" Padding="10,5" Margin="0,0,5,0">Show Message</Button>
            <Button Command="{Binding OpenFileCommand}" Padding="10,5">Open File</Button>
        </StackPanel>
        
        <StatusBar DockPanel.Dock="Bottom" Background="#E0E0E0">
            <TextBlock Text="{Binding StatusMessage}" Margin="10,5"/>
        </StatusBar>
        
        <Grid Background="White" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ECG Viewer" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="MVVM Infrastructure Ready" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Features:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="✓ ViewModelBase with INotifyPropertyChanged and INotifyDataErrorInfo" Margin="10,5"/>
                        <TextBlock Text="✓ RelayCommand with async variants" Margin="10,5"/>
                        <TextBlock Text="✓ Timer abstractions for dependency injection" Margin="10,5"/>
                        <TextBlock Text="✓ Dialog services for UI operations" Margin="10,5"/>
                        <TextBlock Text="✓ Full DI container setup with Microsoft.Extensions.DependencyInjection" Margin="10,5"/>
                        <TextBlock Text="✓ Validation support with error management" Margin="10,5"/>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="Try the buttons above to interact with the MVVM infrastructure!" 
                           FontSize="12" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="#666666"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>